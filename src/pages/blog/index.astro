---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
type Post = {
  data: {
    title: string;
    author: string;
    img: string;
    description: string;
    date: string;
    readtime: string;
    slug: string;
    tags: string;
    important: boolean;
  };
};

const posts: Post[] = await getCollection("posts");

const importantTrue = posts.filter((post) => post.data.important === true);
const importantFalse = posts.filter((post) => post.data.important === false);

// Crear un array vacÃ­o para agregar los elementos en el orden correcto
let orderedItems = [];
let i = 0,
  j = 0;

// Mientras haya elementos en ambos arrays
while (i < importantTrue.length || j < importantFalse.length) {
  // AÃ±adir 1 true
  if (i < importantTrue.length) {
    orderedItems.push(importantTrue[i]);
    i++;
  }

  // AÃ±adir 4 false
  for (let k = 0; k < 4; k++) {
    if (j < importantFalse.length) {
      orderedItems.push(importantFalse[j]);
      j++;
    }
  }
}
---

<Layout>
  <main class="h-full w-full flex gap-7 items-center justify-center">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto mt-32 lg:mx-0">
