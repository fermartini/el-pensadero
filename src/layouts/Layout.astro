---
import NavBar from "../components/NavBar.astro";
import ParticulasMagicas from "../components/ParticulasMagicas.jsx";
import Analytics from '@vercel/analytics/astro'
import { ClientRouter } from "astro:transitions";

const { lang } = Astro.params;
const langDif = lang == 'es' ? 'en' : 'es'
const {
  title,
  description,
  url,
  img = "/assets/img/banner-el-pensadero.webp",
  background = true,
  slugLang = "",
  canonical = `https://elpensaderohp.com/${lang}`,
  alternate = `https://elpensaderohp.com/${langDif}`,
  type = "website"
} = Astro.props;

const currentLang = lang || 'es'; // Default a español si no hay parámetro




import "../style/global.css";
---

<!doctype html>
<html lang={currentLang}>
  <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.png" />

  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description} />
 

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={type} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={`https://elpensaderohp.com${url}`} /> <!-- Cambiado de vercel.app a tu dominio -->
  <meta property="og:image" content={`https://elpensaderohp.com${img}`} /> <!-- Cambiado de vercel.app a tu dominio -->
  <meta property="og:site_name" content="El Pensadero - HP" /> <!-- ¡Nuevo! -->
  <meta name="google-adsense-account" content="ca-pub-4210076972291207">
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`https://elpensaderohp.com${img}`} /> <!-- Cambiado de vercel.app a tu dominio -->
  <meta name="twitter:site" content="@elpensadero_hp" /> 
  <link rel="preconnect" href="https://vitals.vercel-insights.com" />

  <!-- Schema.org para el nombre del sitio -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "El Pensadero - HP",
      "url": "https://elpensaderohp.com",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://elpensaderohp.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>

  <style>
    html,
    body {
      scroll-behavior: smooth;
      margin: 0;
      width: 100%;
      height: 100%;
      color: gray;
    }
  </style>
  
  <meta
    name="google-site-verification"
    content="Lzz4GUNIS9wSvaAtClUBTWKVkKNR16FIRwcgBjMlLrM"
  />

  <title>{title}</title>
  <link rel="canonical" href={canonical} />
  <link rel="alternate" hreflang={lang} href={canonical} />
  <link rel="alternate" hreflang={langDif} href={alternate} />
  <link rel="alternate" hreflang="x-default"  href="https://elpensaderohp.com" />
  

  <ClientRouter />
  <Analytics/>
</head>
  <body class="font-spectral overflow-x-hidden min-h-screen relative">
    <main>
      
    <div class="absolute inset-0 z-10 pointer-events-none">
      <ParticulasMagicas client:visible />
    </div>
    <div
      id="scroll-magic"
      class="pointer-events-none fixed inset-0 z-50 hidden"
    >
      <div class="absolute w-4 h-4 rounded-full bg-yellow-300 animate-ping">
      </div>
    </div>

    <div class="relative h-fit bg-slate-950 z-0 overflow-hidden">
      {
        background && (
        <div
        class="absolute bottom-0 left-[-50%] top-[-5%] xl:left-[-20%] xl:right-0 xl:top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
      >
      </div>
      <!-- ESTE DIV ES EL CIRCULO DEL BORDE DERECHO -->
      <div
        class="absolute bottom-0 left-[50%] md:left-[90%] top-[10%] xl:top-[12%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
      >
      </div>
        )
      }
      <!-- ESTE DIV ES EL CIRCULO DEL BORDE IZQUIERDO -->
      
      <NavBar lang={currentLang} slugLang={slugLang}/>
      <slot />
    </div>
    </main>
  </body>
</html>
