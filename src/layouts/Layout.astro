---
import NavBar from "../components/NavBar.astro";
import ParticulasMagicas from "../components/ParticulasMagicas.jsx";
import { ClientRouter } from "astro:transitions";

const analyticsScript = `
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag("js", new Date());
  gtag("config", "G-KWE5R48J1P");
`;

const {
  title,
  description,
  url,
  img = "/img/banner-el-pensadero.webp",
} = Astro.props;

import "../style/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />

    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Harry Potter, teorías Harry Potter, datos curiosos, El Pensadero, diferencias libros películas, magia, Hogwarts, Dumbledore, Ron, What If Harry Potter"
    />
    <meta
      name="author"
      content="El Pensadero - Harry Potter Teorías y Curiosidades"
    />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KWE5R48J1P"
    ></script>
    <script set:html={analyticsScript} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={`https://elpensadero.vercel.app${url}`} />
    <meta property="og:image" content={img} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={img} />

    <title>{title}</title>
    <ClientRouter />
    <meta
      name="google-site-verification"
      content="Lzz4GUNIS9wSvaAtClUBTWKVkKNR16FIRwcgBjMlLrM"
    />
  </head>
  <body class="font-spectral overflow-x-hidden min-h-screen relative">
    <div class="absolute inset-0 z-10 pointer-events-none">
      <ParticulasMagicas client:visible />
    </div>
    <div
      id="scroll-magic"
      class="pointer-events-none fixed inset-0 z-50 hidden"
    >
      <div class="absolute w-4 h-4 rounded-full bg-yellow-300 animate-ping">
      </div>
    </div>

    <div class="relative h-fit bg-slate-950 z-0 overflow-hidden">
      <!-- ESTE DIV ES EL CIRCULO DEL BORDE IZQUIERDO -->
      <div
        class="absolute bottom-0 left-[-50%] top-[-5%] xl:left-[-20%] xl:right-0 xl:top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
      >
      </div>
      <!-- ESTE DIV ES EL CIRCULO DEL BORDE DERECHO -->
      <div
        class="absolute bottom-0 left-[50%] md:left-[90%] top-[10%] xl:top-[12%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
      >
      </div>
      <NavBar />
      <slot />
    </div>
  </body><style>
    html,
    body {
      scroll-behavior: smooth;
      margin: 0;
      width: 100%;
      height: 100%;
      color: gray;
    }
  </style>
</html>

<script>
  document.fonts.ready.then(() => {
    document.body.classList.add("fonts-loaded");
  });
</script>
