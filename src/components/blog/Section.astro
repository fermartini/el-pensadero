---
import { Image } from "astro:assets";
const {
  title = null,
  imgSrc = null,
  imgAlt = "",
  loading = "lazy",
  css= "text-gray-100",
  width="1408",
  height="768",
} = Astro.props;
---

<section class="mt-6 grid grid-cols-1 mb-10">
  {
    title && (
      <header class="">
        <h3 class={`${css} text-4xl font-semibold mt-6  `}>{title}</h3>
      </header>
    )
  }

  <div class="leading-loose text-gray-300 text-lg w-fit mt-3">
    <slot />
  </div>
  <div>
    {
      imgSrc && (
        <Image
          class="mt-4"
          src={imgSrc}
          alt={imgAlt}
          width={width}
          height={height}
          loading={loading}
        />
      )
    }
  </div>
</section>
