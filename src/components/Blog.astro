---
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
// FunciÃ³n para mezclar los posts aleatoriamente
const shuffleArray = (posts: any) => {
  for (let i = posts.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [posts[i], posts[j]] = [posts[j], posts[i]]; // Intercambia los elementos
  }
  return posts;
};

// Mezcla aleatoriamente los posts
const shuffledPosts = shuffleArray([...posts]);

const limitedPosts = shuffledPosts.slice(0, 3);

type Post = {
  data: {
    title: string;
    img: string;
    description: string;
    slug: string;
  };
};
