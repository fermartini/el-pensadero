{
  "extends": "astro/tsconfigs/base",  // Cambia de "strict" a "base"
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": false,                  // Desactiva el modo estricto
    "noImplicitAny": false,           // Permite any implícito
    "strictNullChecks": false,        // Desactiva verificación de null
    "skipLibCheck": true,             // Omite verificación de librerías
    "allowJs": true                   // Permite archivos JavaScript
  }
}